{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "store:default",
    "dialog:default",
    "shell:allow-open",
    "shell:allow-execute",
    {
      "identifier": "shell:allow-execute",
      "allow": [{
        "name": "notepad",
        "cmd": "notepad.exe",
        "args": true,
        "sidecar": false
      }]
    }
  ]
}